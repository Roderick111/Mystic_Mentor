# Production Environment Configuration for Esoteric Vectors
# Copy this file to .env and fill in your production values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001

# Application URLs (updated with your domain)
FRONTEND_URL=https://mystical-mentor.beautiful-apps.com
BACKEND_URL=https://mystical-mentor.beautiful-apps.com/api

# ===========================================
# AUTH0 CONFIGURATION
# ===========================================
# Get these values from your Auth0 Dashboard
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your_client_id_here
AUTH0_CLIENT_SECRET=your_client_secret_here
AUTH0_AUDIENCE=https://mystical-mentor-api

# Auth0 Management API (for user management)
AUTH0_MANAGEMENT_CLIENT_ID=your_management_client_id
AUTH0_MANAGEMENT_CLIENT_SECRET=your_management_client_secret

# ===========================================
# STRIPE CONFIGURATION
# ===========================================
# Get these from your Stripe Dashboard
STRIPE_SECRET_KEY=sk_live_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Product/Price IDs (create these in Stripe Dashboard)
STRIPE_MONTHLY_PRICE_ID=price_monthly_subscription_id
STRIPE_LIFETIME_PRICE_ID=price_lifetime_payment_id

# ===========================================
# DATABASE & STORAGE PATHS
# ===========================================
DATA_PATH=/app/data
CHROMA_DB_PATH=/app/data/chroma_db
SESSIONS_PATH=/app/data/sessions
QA_CACHE_PATH=/app/data/qa

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Generate a secure secret key for session management
SECRET_KEY=your_super_secure_secret_key_here_min_32_chars

# CORS Origins (updated with your domain)
CORS_ORIGINS=https://mystical-mentor.beautiful-apps.com,https://www.mystical-mentor.beautiful-apps.com

# ===========================================
# SSL/TLS CONFIGURATION
# ===========================================
# SSL certificate paths (inside container)
SSL_CERT_PATH=/app/ssl/mystical-mentor.beautiful-apps.com.pem
SSL_KEY_PATH=/app/ssl/mystical-mentor.beautiful-apps.com-key.pem

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Server details
SERVER_IP=31.97.153.220
DOMAIN_NAME=mystical-mentor.beautiful-apps.com

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================
# Worker processes (adjust based on your server specs)
WORKERS=4
MAX_WORKERS=8

# Memory limits
MAX_MEMORY_MB=2048
CACHE_SIZE_MB=512

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Enable/disable features
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_REQUEST_LOGGING=true

# Log retention (days)
LOG_RETENTION_DAYS=30

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# OpenAI API (if using)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (if using)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# S3 backup configuration (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=mystical-mentor-backups
AWS_REGION=us-east-1

# ===========================================
# RATE LIMITING
# ===========================================
# API rate limits (requests per minute)
RATE_LIMIT_API=100
RATE_LIMIT_AUTH=30
RATE_LIMIT_CHAT=60

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features
ENABLE_AUTH0=true
ENABLE_STRIPE=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_ANALYTICS=true

# ===========================================
# DOCKER-SPECIFIC SETTINGS
# ===========================================
# Container settings
CONTAINER_TIMEZONE=UTC
CONTAINER_USER_ID=10001
CONTAINER_GROUP_ID=10001

# Health check settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3 