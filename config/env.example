# Esoteric Vectors - Environment Configuration
# Copy this file to .env in the project root and fill in your actual values

# ==================== AUTH0 CONFIGURATION ====================
# Get these values from your Auth0 Dashboard > Applications > API

# Your Auth0 domain (e.g., 'your-tenant.auth0.com')
# Do NOT include 'https://' prefix
AUTH0_DOMAIN=your-tenant.auth0.com

# Your Auth0 API identifier from Auth0 Dashboard > APIs
# This should be the 'Identifier' field (e.g., 'https://api.esoteric-agent.com')
AUTH0_AUDIENCE=https://api.esoteric-agent.com

# ==================== API CONFIGURATION ====================
# API server configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# CORS origins (comma-separated for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# ==================== DATABASE CONFIGURATION ====================
# Session storage paths
SESSIONS_DB_PATH=data/sessions/graph_checkpoints.db
CHROMA_DB_PATH=data/chroma_db

# ==================== LOGGING CONFIGURATION ====================
LOG_LEVEL=INFO
LOG_FORMAT=detailed
ENABLE_DEBUG_LOGS=false

# ==================== LLM CONFIGURATION ====================
# Google Gemini API key
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API key (if using OpenAI models)
OPENAI_API_KEY=your_openai_api_key_here

# ==================== PRODUCTION SECURITY ====================
# Set to 'true' in production
PRODUCTION_MODE=false

# Secret key for session encryption (generate a random 32-character string)
SESSION_SECRET_KEY=your_session_secret_key_32_chars

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# ==================== MONITORING & HEALTH ====================
# Health check endpoint authentication
HEALTH_CHECK_SECRET=your_health_check_secret

# Enable metrics collection
ENABLE_METRICS=true

# ==================== CACHE CONFIGURATION ====================
# Memory cache settings
MEMORY_CACHE_SIZE=1000
QA_CACHE_SIZE=500
CACHE_TTL_HOURS=24

# ==================== DOMAIN CONFIGURATION ====================
# Default active domains (comma-separated)
DEFAULT_ACTIVE_DOMAINS=general,spiritual,mysticism 